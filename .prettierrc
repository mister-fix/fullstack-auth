{
  "printWidth": 80,
  "useTabs": true,
  "tabWidth": 2,
  "semi": true,
  "trailingComma": "es5",
  "quoteProps": "as-needed",
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "requirePragma": false,
  "insertPragma": false,
  "proseWrap": "preserve",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "off",
  "singleAttributePerLine": false,
  "organizeImportsSkipDestructiveCodeActions": true,
  "plugins": ["prettier-plugin-organize-imports"],
  "overrides":
    [
      { "files": "*.{cmp,page}", "options": { "parser": "html" } },
      { "files": "*.hbs", "options": { "printWidth": 120 } },
      { "files": ["*.json", "*.jsonc"], "options": { "printWidth": 9999 } },
			{ 
				"files": "*.{yaml,yml}",
				"options": { 
					"yamlSortKeys": false,
					"useTabs": false,
					"tabWidth": 2
				}
			}
    ]
}
